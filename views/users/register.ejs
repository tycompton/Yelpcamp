<% layout('layouts/boilerplate') %>
 
<link rel="stylesheet" href="/stylesheets/login.css">
 
<div class="login-form">
  <h1>Create Account</h1> 
  <form action="/register" method="POST" class="validated-form" novalidate>
    <div>
      <label for="username">Username</label>
      <input type="text" placeholder="Enter your username" name="username" id="username" required autofocus>
    </div>
    <div>
      <label for="email">Email</label>
      <input type="email" placeholder="Enter your username" name="email" id="email" required>
    </div>
    <div>
      <label for="password">Password</label>
      <input type="password" placeholder="Enter your password" name="password" id="password" required>
    </div>
    <button>Create Account</button>
  </form>

  <div class="sign-up">
    <a href="/login">Already have an account? Sign in</a>
  </div>
</div>

